<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/Negra">

    <TextView
        android:id="@+id/inicio"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Elige un instrumento"
        android:layout_gravity="center"
        android:textColor="@color/Blanca"
        android:textSize="25dp"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/piano"
            android:layout_width="175dp"
            android:layout_height="90dp"
            android:layout_marginRight="50dp"
            android:onClick="irPiano"
            android:src="@drawable/iconopiano" />

        <ImageButton
            android:id="@+id/guitarra"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="irGuitarra"
            android:src="@drawable/iconoguitarra" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/bateria"
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:layout_marginRight="80dp"
            android:onClick="irBateria"
            android:src="@drawable/iconobateria" />

        <ImageButton
            android:id="@+id/flauta"
            android:layout_width="80dp"
            android:layout_height="125dp"
            android:onClick="irFlauta"
            android:src="@drawable/iconoflauta" />
    </LinearLayout>

</LinearLayout>