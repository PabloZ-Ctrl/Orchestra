<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@color/Black">

    <LinearLayout
        android:id="@+id/AreaControl"
        style="@style/Control"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:background="@drawable/borde_redondo">

        <LinearLayout
            android:id="@+id/GrupoBotones"
            android:layout_width="370dp"
            android:layout_height="50dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/Botones1"
                style="@style/SubControl"
                android:layout_width="match_parent"
                android:layout_height="50dp" >

                <Button
                    android:id="@+id/grabar"
                    style="@style/botonRojo" />

                <Button
                    android:id="@+id/pausar"
                    style="@style/botonAzul" />

                <Button
                    android:id="@+id/bucle"
                    style="@style/botonAmarillo" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Control"
            style="@style/SubControl"
            android:gravity="center"
            android:orientation="vertical">

            <SeekBar
                android:id="@+id/volumen"
                style="@style/Volumen"
                android:background="@color/Control" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="600dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/F"
            android:layout_width="125dp"
            android:layout_height="100dp"
            android:layout_marginRight="25dp"
            android:src="@drawable/tamborcinco" />

        <ImageButton
            android:id="@+id/S"
            android:layout_width="125dp"
            android:layout_height="70dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/tamborcuatro" />

        <ImageButton
            android:id="@+id/L"
            android:layout_width="125dp"
            android:layout_height="70dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/tamborcuatro" />

        <ImageButton
            android:id="@+id/Si"
            android:layout_width="125dp"
            android:layout_height="100dp"
            android:src="@drawable/tamborseis" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/R"
            android:layout_width="125dp"
            android:layout_height="70dp"
            android:src="@drawable/tambordos" />

        <ImageButton
            android:id="@+id/D"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:src="@drawable/tamboruno" />

        <ImageButton
            android:id="@+id/M"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:src="@drawable/tambortres" />

    </LinearLayout>

</LinearLayout>