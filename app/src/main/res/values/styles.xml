<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="nota">
        <item name="android:onClick">Sonar</item>
    </style>

    <style name="Notas">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">bottom</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_margin">@dimen/margenNotas</item>
    </style>

    <style name="Control">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name="botones_Control">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">@dimen/anchoControl</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/altoControl</item>
        <item name="android:layout_margin">@dimen/margenboton</item>
        <item name="android:textSize">@dimen/textoboton</item>
        <item name="android:onClick">Instrumento</item>
    </style>

    <style name="boton_volumen">
        <item name="android:onClick">Volumen</item>
    </style>

    <style name="Pantalla">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">@dimen/anchoPantalla</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/altoPantalla</item>
        <item name="android:layout_margin">@dimen/margenboton</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="botonAmarillo">
        <item name="android:onClick">Mostrar</item>
    </style>

    <style name="botonRojo">
        <item name="android:onClick">Grabar</item>
    </style>

    <style name="botonAzul">
        <item name="android:onClick">Pausar</item>
    </style>

    <style name="botonVerde">
        <item name="android:onClick">Bucle</item>
    </style>

</resources>
